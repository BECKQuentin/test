{% extends 'base.html.twig' %}

{% block title %}Changer de mot de passe{% endblock %}

{% block body %}

    <div class="content_box">

        <h2>Modifier son mot de passe</h2>

        <div class="content_box_element">
            {{ form_start(form) }}

            <div class="row">
                <div class="col-6">
                    {{ form_rest(form) }}
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('user_edit') }}" class="btn btn-elan">Retour</a>
                        <button type="submit" class="btn btn-primary">Modifier</button>
                    </div>
                </div>
            </div>


            {{ form_start(form) }}
        </div>
    </div>


{% endblock %}