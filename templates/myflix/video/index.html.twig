{% extends 'base.html.twig' %}

{% block title %}Video index{% endblock %}

{% block body %}

    <h2>Video index</h2>

    <a href="{{ path('app_myflix_video_new') }}" class="btn btn-primary">{{ 'plus'|svg }}</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>LocaleSrc</th>
                <th>UqloadSrc</th>
                <th>Ratings</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for video in videos %}
            <tr>
                <td>{{ video.id }}</td>
                <td>{{ video.name }}</td>
                <td>{{ video.localeSrc }}</td>
                <td>{{ video.uqloadSrc }}</td>
                <td>{{ video.ratings }}</td>
                <td>{{ video.createdAt ? video.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_myflix_video_show', {'id': video.id}) }}">show</a>
                    <a href="{{ path('app_myflix_video_edit', {'id': video.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_myflix_video_new') }}">Create new</a>
{% endblock %}
